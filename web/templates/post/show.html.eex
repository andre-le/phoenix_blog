<h2>Show post</h2>

<ul>
  <li>
    <strong>Title:</strong>
    <%= @post.tittle %>
  </li>
  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>
</ul>

<%= link "Edit", to: user_post_path(@conn, :edit, @user, @post) %>

<%= render "comments.html", conn: @conn, comment: @comment %>

<%= render "comment_form.html", post: @post, changeset: @changeset,
action: user_post_post_path(@conn, :add_comment, @user, @post) %>
